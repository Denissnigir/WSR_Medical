<Page x:Class="WSR_Medical.Pages.PrintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR_Medical.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrintPage" Loaded="Page_Loaded">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="DateTB"/>
        <TextBlock Text="{Binding GetId}" Grid.Row="1"/>
        <TextBlock Text="{Binding Barcode}" Grid.Row="2"/>
        <TextBlock Text="{Binding Patient.InsuranceNumber}" Grid.Row="3"/>
        <TextBlock Text="{Binding Patient.GetName}" Grid.Row="4"/>
        <TextBlock x:Name="BirthDateTB" Grid.Row="5"/>
        <TextBlock Text="{Binding GetServices}" Grid.Row="6"/>
        <TextBlock x:Name="PriceTB" Grid.Row="7"/>
    </Grid>
</Page>
