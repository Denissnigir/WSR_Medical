<Page x:Class="WSR_Medical.Pages.CaptchaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR_Medical.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaptchaPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="CaptchaBtn" Click="ChangeCaptcha" Background="Transparent" BorderThickness="0" Width="200" Height="45"/>
        <TextBox x:Name="CaptchaTB" Height="45" Width="200" Grid.Row="1"/>
        <Button Grid.Row="2" Height="45" Width="300" Content="Ввести" Click="ValidateCaptcha"/>
    </Grid>
</Page>
