<Page x:Class="WSR_Medical.Pages.PdfPrintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR_Medical.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PdfPrintPage" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="PrintPanel">
                <Grid>

                    <DataGrid Name="BillList" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название организации" Binding="{Binding Patient.InsuranceCompany.Name}" Width="*"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Patient.GetName}" Width="*"/>
                            <DataGridTextColumn Header="Услуги" Binding="{Binding GetServices}" Width="*"/>
                            <DataGridTextColumn Header="Цены услуг по клиенту" Binding="{Binding GetTotalPrice}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <TextBlock HorizontalAlignment="Left" Margin="10" FontSize="18" x:Name="totalPrice" Grid.Row="2"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
